@model VisionOne.Core.Domain.User
<html>
<head>

    <link rel="stylesheet" href="~/css/Style.css" />
</head>

<body>
    <div class="login">
        <h1>Login to VisionOne</h1>

        <form method="post" enctype="multipart/form-data" asp-controller="Login" asp-action="Index">
            <p>
                @* <input type="text" name="username" value="" placeholder="Username or Email" required autocomplete="false"> *@
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </p>
            <p>
                @* <input type="password" name="password" value="" placeholder="Password" required> *@
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password" })
                </p>
           @*  <p class="remember_me">
                <label>
                    <input type="checkbox" name="remember_me" id="remember_me">
                    Remember me on this computer
                </label>
            </p> *@
            <p class="submit"><input type="submit" name="commit" value="Login" formmethod="post"></p>
            <hr />
            @ViewBag.message
        </form>
    </div>
</body>
</html>