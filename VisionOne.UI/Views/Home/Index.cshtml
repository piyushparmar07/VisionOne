<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.7.5/sweetalert2.min.js"></script>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VisionOne </title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VisionOne.UI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand">VisionOne</a>
                <div>
                    @if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString("Name")))
                    {
                        <div>@HttpContextAccessor.HttpContext.Session.GetString("Name")</div>
                        <form method="post" asp-action="Index" asp-controller="Login">
                            <input type="button" value="Logout" onClick='Logout();' />
                        </form>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div style="width:90%; margin:0 auto;">
            <a class="btn btn-info" href="/Home/AddEditStock/">Add</a>
            <table id="example" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Code</th>
                        <th>Location</th>
                        <th>ContainerNumber</th>
                        <th>GroupName</th>
                        <th>Quantity</th>
                        <th>Rate</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            @* &copy; 2023 - VisionOne.UI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
        </div>
    </footer>
</body>
<script>

    $(document).ready(function () {
        var table = $("#example").DataTable({
            dom: 'Bfrtip',
            buttons: [
                'print'
            ],
            "pageLength": 2,
            lengthChange: false,
            buttons: ['copy', 'excel', 'pdf', 'colvis'],
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "ajax": {
                "url": "/Home/LoadData",
                "type": "POST",
                "datatype": "json",
                // "success": function (response) {
                //     alert('success');
                //     console.log(response)
                // },
                // "failure": function (response) {
                //     alert('failure');
                // },
                // "error": function (response) {
                //     alert('error');
                // }
            },
            "columnDefs": [
                {
                "target": 0,
                "visible": false,
                "searchable": false
            },
            {
                "target": 8,
                    "visible": '@(HttpContextAccessor.HttpContext.Session.GetString("Role") == "Admin")' == 'False'? false:true,
                "searchable": false
                },
                {
                    "target":7,
                    "visible": '@(HttpContextAccessor.HttpContext.Session.GetString("Role") == "Admin")' == 'False' ? false : true,
                    "searchable": false
                }
            ],
            "columns": [
                { "data": "id", "name": "Id", "autoWidth": true },
                { "data": "code", "name": "Code", "autoWidth": true },
                { "data": "location", "name": "Location", "autoWidth": true },
                { "data": "containerNumber", "name": "ContainerNumber", "autoWidth": true },
                { "data": "groupName", "name": "GroupName", "autoWidth": true },
                { "data": "quantity", "name": "Quantity", "autoWidth": true },
                { "data": "rate", "name": "Rate", "autoWidth": true },
                {
                    "render": function (data, type, full, meta) { return '<a class="btn btn-info" href="/Home/AddEditStock/' + full.id + '">Edit</a>'; }
                },
            
                {
                    data: null,
                    render: function (data, type, row) {
                        return "<a href='#' class='btn btn-danger' onclick=DeleteData('" + row.id + "'); >Delete</a>";
                    }
                },
            
            ]

        });
        console.log(table);
        table.buttons().container()
            .appendTo('#example_wrapper .col-md-6:eq(0)');
    });

    function DeleteData(Id) {

        Swal.fire({
            title: 'Are you sure?',
            // text: "You won't be able to revert this!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.value) {
                Delete(Id);
            }
        })


        // if (confirm("Are you sure you want to delete ...?")) {
        //     Delete(Id);
        // } else {
        //     return false;
        // }
    }


    function Delete(Id) {
        var url = '@Url.Content("~/")' + "Home/DeleteStock";

        $.post(url, { Id: Id }, function (data) {
            if (data) {
                oTable = $('#example').DataTable();
                oTable.draw();
                Swal.fire(
                    'Deleted!',
                    'Record deleted successfully.',
                    'success'
                ).then(function () {
                    window.location = "@Url.Action("Index","Home")";
                });
            } else {
                Swal.fire(
                    'Error!',
                    'Something Went Wrong!',
                    'error'
                )
            }
        });
    }

    function Logout() {
        window.location = "@Url.Action("Index","Login")";
    }

</script> 